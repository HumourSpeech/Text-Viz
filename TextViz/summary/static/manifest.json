{
    "manifest_version": 3,
    "name": "TextViz text summarizer",
    "version": "1.0",
    "description": "A browser extension that summarizes web content",
    "permissions":[
      "activeTab",
      "storage"
      
    ],
"icons": {
  "64": "ICON.png"
},
    "action": {
      "default_popup": "popup.html",
      "48": "ICON.png"
    },
    "commands":{
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "Command+Shift+S"
      }
    }
}
}